
[module/launcher]
type=custom/text
content = 
content-font = 2
content-foreground= ${color.teal}
content-padding = 2
click-left=rofi -show drun

[module/cpu]
type = internal/cpu
interval = 2
format = <label>
format-foreground= ${color.mauve}
format-prefix = " "
format-padding = 1

[module/memory]
type = internal/memory
interval = 2
format = <label>
format-foreground= ${color.yellow}
format-prefix = " "
label = "%mb_used%"
format-padding = 1

