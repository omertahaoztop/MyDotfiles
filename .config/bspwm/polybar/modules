[module/spotify]
type = custom/script
tail = true
interval = 1
; prefix symbol is shown before the text
format-prefix = "   "
format-foreground= ${color.green}
format-font = 2
format = <label>
exec = ~/.config/polybar3/scroll_spotify_status.sh

[module/spotify-prev]
type = custom/script
exec = echo " ﭢ "
format-foreground= ${color.green}
format-font = 2
format = <label>
click-left = playerctl previous

[module/spotify-play-pause]
type = custom/ipc
hook-0 = echo " "
hook-1 = echo " "
format-foreground= ${color.green}
format-font = 2
initial = 1
click-left = playerctl play-pause

[module/spotify-next]
type = custom/script
format-foreground= ${color.green}
format-font = 2
exec = echo "ﭠ "
format = <label>
click-left = playerctl next

